{
  "name": "rpg-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:unit",
    "test:ci": "npm run test:unit",
    "test:unit": "ng test --watch=false --browsers=ChromeHeadlessCI --code-coverage --karma-config config/karma.conf.js",
    "lint": "ng lint",
    "lint:report": "ng lint --format json --output-file eslint-report.json",
    "sonar": "node ../.github/scripts/convert-stryker-to-sonar.js && sonar-scanner",
    "test:e2e": "playwright test",
    "e2e": "npm run test:e2e",
    "e2e:ui": "playwright test --ui",
    "e2e:cli": "playwright test --reporter=list",
    "stryker": "stryker run config/stryker.config.json"
  },
  "private": true,
  "overrides": {
    "ajv": "^8.18.0",
    "axios": "^1.13.5",
    "tar": ">=7.5.8",
    "webpack": ">=5.105.0"
  },
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular-eslint/builder": "^19.8.1",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.0",
    "@playwright/test": "^1.57.0",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/jasmine-runner": "^9.5.1",
    "@stryker-mutator/karma-runner": "^9.5.1",
    "@stryker-mutator/typescript-checker": "^9.5.1",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.7.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jasmine": "^6.0.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "sonarqube-scanner": "^4.3.4",
    "typescript": "~5.7.2"
  }
}